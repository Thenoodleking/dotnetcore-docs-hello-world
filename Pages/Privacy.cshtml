    body {
        font-size: 16px;
        line-height: 1.5;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }

    p {
        margin-bottom: 20px;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
