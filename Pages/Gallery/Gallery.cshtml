@page "/gallery"
@model GalleryModel
@{
    ViewData["Title"] = "青楼梦·万晓慈-不负初心不负卿";
}

<style>
    /* 在这里添加您的CSS样式 */

    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        grid-gap: 20px;
    }

    .gallery img {
        width: 100%;
        border-radius: 5px;
    }
</style>

<div class="container pt-5">
    <h1>@Html.Raw(ViewData["Title"])</h1>
    <div class="gallery">
        @for(int i=1; i<=33; i++)
        {
            <img src="/gallery/@i.png" alt="图片 @i">
        }
        @for(int i=34; i<=42; i++)
        {
            <img src="/gallery/@i.jpg" alt="图片 @i">
        }
    </div>
</div>
