@model LSP_HOME.Models.Message

<h1>New Chat</h1>

<form method="post">
    <div class="form-group">
        <label for="prompt">Prompt:</label>
        <textarea asp-for="Prompt" class="form-control"></textarea>
        <span asp-validation-for="Prompt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="text">Message:</label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="choices">Choices:</label>
        <div>
            @foreach (var choice in Model.Choices)
            {
                <input asp-for="@choice.Keyword" type="checkbox" />
                <label>@choice.Keyword</label><br />
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-page="/GPT/Index" class="btn btn-secondary">Back to chat</a>
</form>
